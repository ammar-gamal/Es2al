@model SubQuestionVM

<form id="questionForm_@ViewData["questionId"]" method="POST" asp-route="sub-question" class="mt-3">
    <div class="form-group">
        <span asp-validation-for="Text" class="error text-danger"></span>
        <textarea asp-for="Text" class="form-control" rows="4" placeholder="Write your Question here..."></textarea>
    </div>

    <div class="form-group mt-2 d-flex justify-content-between align-items-center">
        <div class="anonymous-slider">
            <label class="form-check-label me-2" asp-for="IsAnonymous">Anonymous</label>
            <label class="switch">
                <input asp-for="IsAnonymous" type="checkbox" class="form-check-input" />
                <span class="slider round"></span>
            </label>
        </div>
        <button type="submit" class="btn btn-primary btn-sm">Send</button>
    </div>
</form>

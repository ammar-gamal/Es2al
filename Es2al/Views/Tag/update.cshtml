@model Tag
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="tag-form" asp-route="update-tag" asp-route-id="@Model.Id">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span id="name-validation" asp-validation-for="Name" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
            <input hidden asp-for="Id" />
        </form>
    </div>
</div>

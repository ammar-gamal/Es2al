@model LoginVM;
<form method="post" asp-controller="account" asp-action="login">
    <div class="form-group email-username">
        <label asp-for="EmailOrUserName">Email / UserName</label>
        <input asp-for="EmailOrUserName" class="form-control" />
        <span asp-validation-for="EmailOrUserName" class="error"></span>
    </div>
    <div class="form-group password">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="error"></span>
    </div>
    <div class="form-group form-check remember">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
    </div>
    <div class="form-group submit">
        <input type="submit" class="btn btn-primary" value="Login" />
    </div>
    <div class="text-center">
        <p>Don't have an account? <a asp-controller="account"  asp-action="register">Sign Up</a></p>
    </div>
</form>

